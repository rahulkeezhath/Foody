<script>
  //Chart

  const ctx = document.getElementById('myChart');

  window.addEventListener('load',()=>{
    fetch('/admin/chartList',{
      method:'get'
    }).then(res=> res.json()).then(data=>{
      new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['User','Placed Order'],
      datasets: [{
        label: '# of Votes',
        data: [data.userLength,data.orderPlacedLength],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
    }).catch((err)=>{
      console.log(err.message);
    })
  })
  
</script>




