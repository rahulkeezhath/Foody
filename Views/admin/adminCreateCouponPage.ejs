<section class="home-section mt-5">
<main class="main-content">
    <div class="product-grid">
        <div class="card">
            <div class="header">
                <h3>Add Coupon</h3>
            </div>
            <div class="card-body">
                <div>
                    <form action="/admin/adminAddCoupon" method="post">
                        <div class="mb-3 d-flex">
                            <div style="width: 25%;" class="me-2">
                                <label for="" class="form-label">Coupon Name</label>
                                <input type="text" class="form-control" name="couponName"
                                    style="text-transform: capitalize;">
                            </div>
                            <div style="width: 25%;" class="me-2">
                                <label for="" class="form-label">Coupon Code</label>
                                <input type="text" class="form-control" name="couponCode"
                                    style="text-transform: uppercase;">
                            </div>
                            <div style="width: 25%;" class="me-2">
                                <label for="" class="form-label">Discount</label>
                                <input type="number" class="form-control" name="discount"
                                    style="text-transform: uppercase;">
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div style="width: 25%;" class="me-3">
                                <label for="" class="form-label">Start Date</label>
                                <input type="date" class="form-control"  name="startDate">
                            </div>
                            <div style="width: 25%;" class="me-2">
                                <label for="" class="form-label">End Date</label>
                                <input type="date" class="form-control"  name="endDate">
                            </div>
                        </div>
                            <button type="submit" class="btn btn-success">ADD</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
</section>