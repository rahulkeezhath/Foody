
<section class="home-section mt-5">
<div class="container">
    <div class="row">
      <% for(var i=0;i<orderProducts.length;i++) { %>
      <div class="col-sm-2 pr-0">
        <div class="mb-2" style=" background-color:#eef3f7">
        
          <img style="width:11rem ; height:10rem;" src="<%= orderProducts[i].products.Picture %>" alt="sdfsfsfsfd">
        </div>
      </div>
      <div class="col-sm-10 bg-light mb-2">
        <br>
        <div class="pl-3">
          <h5 style="
            font-weight: bold;"><%= orderProducts[i].products.productName %></h5>
          <br>

          <div>
            <h6>
              <span class="text-success"><i class="fa-solid fa-star text-success"></i>Rs:<%=
                orderProducts[i].products.sellingPrice %></span>
            </h6>
          </div>

          <div class="text-danger">
            <div class="d-flex flex-row-reverse pr-5"><a href=""><i class="fa-sharp fa-solid fa-trash"></i></a></div>
            Quantity:<%=
            orderProducts[i].quantity %>

          </div>
        </div>
      </div>
      <% } %>
      <br>
    </div>
<br>
    <div>
    <h5 class="fw-bold" >Status Update</h5>
    </div>
    <form id="statusForm" action="" style="text-align: left;" class="mb-2">
      <input style="display: none;" type="" name="id" value="<%= orderProducts[0]._id %>">
      <div class="mt-4">
          
          <select name="status" id="" class="mb-3 bg-primary"
              style="border-radius: 50px; padding: 7px 10px; color: #fff;" value="<%= orderProducts[0].status %>"> 
              <option selected>ordered</option>
              <option value="Packed">packed</option>
              <option value="Shipped">shipped</option>
              <option value="Delivered">delivered</option>
              <option value="Placed">Placed</option>
          </select>
       
      </div>
      <input class="btn btn-success" type="submit" value="Update">
  </form>
  </div>
  </div>
  </div>
  </div>
</section>




  <script>
    const statusForm = document.getElementById('statusForm');
    statusForm.addEventListener('submit',(e)=>{
      e.preventDefault()
      const formData = new FormData(statusForm);
      const data = Object.fromEntries(formData);
      console.log(formData);
      console.log(data)
      fetch('/admin/ordersStatusUpdate',{
        method:'POST',
        headers:{'content-type':'application/json'},
        body:JSON.stringify(data)
      }).then(res => res.json()).then(response =>{
        window.location='/admin/adminOrderPage'
      })
    })
  </script>

  

<script>
  let sidebar = document.querySelector(".sidebar");
 let sidebarBtn = document.querySelector(".sidebarBtn");
 sidebarBtn.onclick = function() {
 sidebar.classList.toggle("active");
 if(sidebar.classList.contains("active")){
 sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right"); 
 }else
 sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
 }
 </script>
