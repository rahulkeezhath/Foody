<section class="home-section">   
    <div class="container mb-3">

        <section class="mt-5" >
            <div class="container">
                <form action="/admin/editProductAction" method="post"  enctype="multipart/form-data">
                <div class="row pb-5">                   
                         <div class="d-flex">
                            <div>
                                <input type="text" name="id" id="id" value="<%= product._id %>" style="display:none;">
                            </div>
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Product Name</span>
                                <input name="productName" id="productName" value="<%= product.productName %>"  type="text" class="form-control" required aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </div>
                            <div class="input-group mb-3 w-25 ps-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Actual Price</span>
                                <input  name="actualPrice" id="actualPrice" value="<%= product.actualPrice %>" type="number" class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                            <div class="input-group mb-3 w-25 ps-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Selling Price</span>
                                <input  name="sellingPrice" id="sellingPrice" value="<%= product.sellingPrice %>" type="number" class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Select Category</span>
                                <select class="form-select" aria-label="Default select example" name="category" required>
                                    <option selected><%= product.newCategory %></option>
                                    <% for(var i=0;i<category.length; i++) { %>
                                    <option value="<%= category[i].newCategory%>"><%= category[i].newCategory%></option>
                                    <% } %>
                                  </select>
                        </div>
                        </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Select Brand</span>
                                <select class="form-select" aria-label="Default select example" name="brand">
                                    <option selected><%= product.brand %></option>
                                    <% for(var i=0; i<brand.length; i++){ %>
                                    <option value="<%= brand[i].brand %>"><%= brand[i].brand %></option>
                                    <% } %>
                                  </select>
                            </div>      
                        </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Quantity</span>
                                <input name="quantity" id="quantity" value="<%= product.quantity %>" type="number" class="form-control" required aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default">
                            </div>
                            
                    
                        </div>
        
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3">
                                <div class="input-group">
                                    <span class="input-group-text">Product Description</span>
                                    <textarea name="productDescription" class="form-control" aria-label="With textarea"><%= product.productDescription %></textarea>
                                </div>
                            </div>
                        </div>
        
        
                        <div class="input-group">
                            <input  name="productImage" type="file"  class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" required>
                            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Upload</button>
                        </div>
                        <div class="d-felx justify-content-center mt-3">
                            
                                <input type="submit" value="UPDATE PRODUCT" class="btn btn-success m-2">
                                
                         
                        </div>
                           
                    </form>
        
                </div>
            </div>
        </section>
    </div>
</section>