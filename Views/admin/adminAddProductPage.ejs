<section class="home-section">   
    <div class="container mb-3">

        <section class="mt-5" >
            <div class="container">
                <div class="row pb-5">
                    <form action="/admin/addNewProduct" method="post"  enctype="multipart/form-data">
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Product Name</span>
                                <input name="productName" type="text" class="form-control" required aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default" required>
                            </div>
                        </div>
                        <div class="input-group mb-3 w-25 ps-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Actual Price</span>
                            <input  name="actualPrice" type="number" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default" required>   
                        </div>
                            <div class="input-group mb-3 w-25 ps-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Selling Price</span>
                                <input  name="sellingPrice" type="number" class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default" required>   
                            </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Select Category</span>
                                <select class="form-select" aria-label="Default select example" name="category">
                                    <option selected></option>
                                    <% for(var i=0;i<category.length; i++) { %>
                                    <option value="<%= category[i].newCategory%>"><%= category[i].newCategory%></option>
                                    <% } %>
                                  </select>
                            </div>      
                        </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Select Brand</span>
                                <select class="form-select" aria-label="Default select example" name="brand">
                                    <option selected></option>
                                    <% for(var i=0; i<brand.length; i++){ %>
                                    <option value="<%= brand[i].brand %>"><%= brand[i].brand %></option>
                                    <% } %>
                                  </select>
                            </div>      
                        </div>
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3 w-50">
                                <span class="input-group-text" id="inputGroup-sizing-default">Quantity</span>
                                <input name="quantity" type="number" class="form-control" required aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default" required >
                            </div>
                            
                    
                        </div>
        
                        <div class="d-flex">
                            <div class="input-group mb-3 pe-3">
                                <div class="input-group">
                                    <span class="input-group-text">Product Description</span>
                                    <textarea name="productDescription" required class="form-control" aria-label="With textarea"></textarea>
                                </div>
                            </div>
                        </div>
        
        
                        <div class="input-group">
                            <input  name="productImage" type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" required>
                            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Upload</button>
                        </div><br><br>

                        <div class="form-check w-25 ms-5">
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="featuredProducts">
                            <label class="form-check-label text-dark " for="flexCheckDefault">
                              Featured Products
                            </label><br><br>
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="recentProducts">
                            <label class="form-check-label text-dark " for="flexCheckDefault">
                               Recent Products
                            </label><br><br>
                          </div>


                        <div class="d-felx justify-content-center mt-3">
                            
                                <input type="submit" value="ADD PRODUCT" class="btn btn-success m-2">
                                <input type="reset" value="RESET ITEM" class="btn btn-info m-2 w-25">
                         
                        </div>
                           
                    </form>
        
                </div>
            </div>
        </section>
    </div>
</section>
<script>
    let sidebar = document.querySelector(".sidebar");
   let sidebarBtn = document.querySelector(".sidebarBtn");
   sidebarBtn.onclick = function() {
   sidebar.classList.toggle("active");
   if(sidebar.classList.contains("active")){
   sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right"); 
   }else
   sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
   }
   </script>